{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "bin",
        "noImplicitAny": true,
		"sourceMap": true,
		"inlineSourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
    },
    "include": [
		"src/**/*",
		"test/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}