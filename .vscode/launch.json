	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}\\next-repository\\test\\Test.ts",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			]
		},
		{
			"name": "Current TS Tests File",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/next-repository",
			"program": "${workspaceRoot}/next-repository/node_modules/mocha/bin/_mocha",
			"args": ["-r", "ts-node/register", "${workspaceFolder}/next-repository/test/**/*Test.ts"],
			"protocol": "inspector"
		}
	]
}